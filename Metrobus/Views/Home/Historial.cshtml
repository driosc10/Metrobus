@{
    ViewData["Title"] = "Historial";
    var metrobuses = ViewBag.metrobuses;
}
<h1>@ViewData["Title"]</h1>


<div class="row">
    <div class="col-4">
        <h6>Ingrese el ID del Vehículo para revisar su historial</h6>
    </div>
    <div class="col-4">
        <input type="text" id="txtVehicle" class="form-control" />
    </div>
    <div class="col-4">
        <button type="button" class="btn btn-primary btnSearch" onclick="ConsultaMetrobusByID();">Consultar</button>
    </div>
</div>

<br />
<br />

@if (metrobuses != null)
{
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Latitud</th>
                            <th scope="col">Longitud</th>
                            <th scope="col">Fecha de Actualización</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            @foreach (var item in metrobuses)
                            {
                                <tr>
                                    <th scope="row">@item.Vehicle_ID</th>
                                    <td>@item.Latitud</td>
                                    <td>@item.Longitud</td>
                                    <td>@item.Date_Update</td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
            <div class="col-2"></div>
        </div>
}
